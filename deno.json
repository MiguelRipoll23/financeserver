{
  "imports": {
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^3.0.36",
    "ai": "npm:ai@^6.0.103",
    "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.2.2",
    "@simplewebauthn/server": "jsr:@simplewebauthn/server@^13.2.3",
    "@needle-di/core": "jsr:@needle-di/core@^1.1.1",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.9.46",
    "@hono/mcp": "npm:@hono/mcp@0.2.3",
    "@modelcontextprotocol/sdk/server/mcp.js": "npm:@modelcontextprotocol/sdk@^1.27.1/server/mcp.js",
    "drizzle-kit": "npm:drizzle-kit@^0.31.9",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "pg": "npm:pg@^8.19.0",
    "hono": "npm:hono@^4.12.3",
    "zod": "npm:zod@^4.3.6"
  },
  "unstable": ["kv"],
  "permissions": {
    "development": {
      "env": true,
      "read": true,
      "net": true
    },
    "database": {
      "env": true,
      "read": true,
      "write": true,
      "net": true,
      "run": true,
      "sys": true
    }
  },
  "tasks": {
    "dev": "deno run --permission-set=development --env --watch src/main.ts",
    "debug": "deno run --inspect-wait --permission-set=development --env --watch src/main.ts",
    "check": "deno check src/main.ts",
    "studio": "deno run --permission-set=database --node-modules-dir npm:drizzle-kit studio",
    "generate": "deno run --permission-set=database --node-modules-dir npm:drizzle-kit generate",
    "migrate": "deno run --permission-set=database --node-modules-dir npm:drizzle-kit migrate"
  },
  "deploy": {
    "predeploy": "deno task migrate",
    "runtime": {
      "entrypoint": "src/main.ts",
      "args": ["--unstable-kv"]
    }
  }
}
